[Unit]
Description=uWSGI instance to serve app
After=network.target


[Service]
User=vagrant
Group=www-data
WorkingDirectory=/home/vagrant/www/app
Environment="PATH=/home/vagrant/www/app/venv/bin"
Restart=always
KillSignal=SIGQUIT
Type=notify
NotifyAccess=all
ExecStart= /home/vagrant/www/app/venv/bin/uwsgi --master --emperor --ini /home/vagrant/www/app/app.ini

[Install]
WantedBy=multi-user.target